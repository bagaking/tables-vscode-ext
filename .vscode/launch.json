{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--user-data-dir=${workspaceFolder}/example/.devhost-user-data",
        "--extensions-dir=${workspaceFolder}/example/.devhost-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "${workspaceFolder}/example"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "npm: watch"
    }
  ]
}