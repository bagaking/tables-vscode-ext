{
  "name": "tables-vscode-ext",
  "displayName": "Tables CSV Editor",
  "description": "View and edit CSV files with a modern data grid inside VS Code.",
  "version": "0.0.1",
  "publisher": "bagaking",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:tables.csvEditor",
    "onCommand:tablesCsvEditor.openFile"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "mocha -r ts-node/register tests/**/*.test.ts"
  },
  "contributes": {
    "commands": [
      {
        "command": "tablesCsvEditor.openFile",
        "category": "Tables",
        "title": "Open CSV in Tables Editor"
      }
    ],
    "customEditors": [
      {
        "viewType": "tables.csvEditor",
        "displayName": "Tables CSV Editor",
        "selector": [
          {
            "filenamePattern": "*.csv"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.30",
    "@types/papaparse": "^5.3.16",
    "@types/vscode": "^1.84.0",
    "chai": "^4.4.1",
    "mocha": "^10.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@khgame/tables": "0.2.8",
    "ag-grid-community": "^32.2.1",
    "papaparse": "^5.4.1"
  }
}
